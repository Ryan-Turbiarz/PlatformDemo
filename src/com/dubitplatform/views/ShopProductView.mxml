<?xml version="1.0" encoding="utf-8"?>
<ProductViewBase xmlns="uk.co.dubit.platform.components.catalogue.ui.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="75" height="75" xmlns:shared="uk.co.dubit.platform.components.shared.*">
	<mx:VBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" >
		<shared:CachedImage source="{ product.previewURL }" toolTip="{ product.name }" width="100%" height="100%" />
		<mx:Button label="Buy" enabled="{ !product.owned }" click="{ product.purchase() }" />
	</mx:VBox>	
</ProductViewBase>