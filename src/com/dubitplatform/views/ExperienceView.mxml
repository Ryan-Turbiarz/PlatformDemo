<?xml version="1.0" encoding="utf-8"?>
<ExperienceViewBase xmlns="uk.co.dubit.platform.components.experience.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="100%">
	
	<mx:Script>
		<![CDATA[
			
			override protected function onPointsAwarded () : void
			{
				progressBar.minimum = level.points;
				progressBar.maximum = nextLevel.points;
				progressBar.setProgress(points, nextLevel.points);
			}	
		
		]]>
	</mx:Script>
	
	<mx:HBox width="100%">
		<mx:Label text="Level {level.index} - {level.name}" fontWeight="bold"/>
		<mx:Box paddingTop="3">
			<mx:ProgressBar id="progressBar" mode="manual" width="100" label=""/>	
		</mx:Box>
		<mx:Label text="{points + '/' + nextLevel.points }" width="50"/>			
	</mx:HBox>
		
</ExperienceViewBase>
