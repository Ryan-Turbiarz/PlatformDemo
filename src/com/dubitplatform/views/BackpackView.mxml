<?xml version="1.0" encoding="utf-8"?>
<BackpackViewBase xmlns="uk.co.dubit.platform.components.backpack.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" borderStyle="none">
	
	<mx:Script>
	    <![CDATA[
	    	import uk.co.dubit.platform.components.backpack.ICollectable;
	    ]]>
	</mx:Script>

	<mx:VBox width="100%" height="100%" verticalAlign="top" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
		<mx:Label text="The stuff in your backpack" fontWeight="bold"/>
		<mx:List id="backpackList" borderStyle="none" dataProvider="{ contents }" width="100%" height="100%" variableRowHeight="true" itemClick="{selectCollectable(ICollectable(backpackList.selectedItem))}">
			<mx:itemRenderer>
           		<mx:Component>
					<CollectableView collectable="{ ICollectable(data) }" width="100%"/> 	
           		</mx:Component>
       		</mx:itemRenderer>
		</mx:List>
	</mx:VBox>	
	
</BackpackViewBase>
