<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns:xi="http://www.w3.org/2001/XInclude">
	<Menus>
		<ContextMenu id="playerMenu" track="true" offsetX="100" closeOnTargetMove="true" offsetY="0">			
			<MenuItem text="Start Minigame API Tester">
				<Triggers>
					<onMenuItemSelected><OpenMinigame minigame="apiTester" /></onMenuItemSelected>
				</Triggers>
			</MenuItem>
			
			<MenuItem eventName="onShowAvatarEditor" text="Change clothes" toolTip="Customize your character">
				<Triggers>
					<onMenuItemSelected><OpenAvatarEditor avatarEditor="edit" avatar="{Event.menu.target}" /></onMenuItemSelected>
				</Triggers>
			</MenuItem>
		</ContextMenu>
			
		<ContextMenu id="otherPlayerMenu" track="true" offsetX="100" offsetY="0">
			<MenuItem text="Start Minigame API Tester (Multiplayer mode)">
				<Triggers>
					<onMenuItemSelected><InviteToMinigame minigame="apiTester" avatar="{Event.menu.target}" /></onMenuItemSelected>	
				</Triggers>
			</MenuItem>
		</ContextMenu>			
	</Menus>
</Include>