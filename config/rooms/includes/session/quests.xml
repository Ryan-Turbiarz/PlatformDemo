<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns:xi="http://www.w3.org/2001/XInclude">

	<Quests>
		<Quest id="testQuest" name="My new quest" activateOnUnlock="true" description="This is the quest description">
			<UnlockObjectives>
				<GotoRoomObjective roomID="lab" />
			</UnlockObjectives>
			
			<CompleteObjectives>
				<GotoRoomObjective roomID="village" name="Go back to the village"/>
				<OpenMenuObjective menu="playerMenu" name="Open the player menu"/>
				<OpenMinigameObjective minigame="apiTester" name="Play a minigame" />
			</CompleteObjectives>
			
			<Triggers>
				<onQuestUnlocked>
					<Alert message="Quest unlocked" />
				</onQuestUnlocked>
				
				<onQuestCompleted>
					<Alert message="Quest complete" />
				</onQuestCompleted>
			</Triggers>
		</Quest>
	</Quests>
</Include>