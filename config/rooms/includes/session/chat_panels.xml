<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns:xi="http://www.w3.org/2001/XInclude">
	<ChatPanels defaultPanel="defaultChatPanel">
		<ChatPanel id="defaultChatPanel" defaultText="Type here to chat..." skin="com.dubitplatform.views.ChatPanelView" targetContainer="chat" attachSkin="true" />
		
		<Triggers>
			<onSendMessage>
				<ShowPlayerBubble message="{Event.message}" useServer="true" />
			</onSendMessage>
		</Triggers>
	</ChatPanels>
</Include>