<!-- Definition of players in the room -->
<PlayerDefinition id="playerDefinition"
	assetURL="avatar/avatar.swf"
	x="{Room.startX}" 
	y="{Room.startY}" 
	originX="54" 
	originY="264"
	nameOriginX="0" 
	nameOriginY="0" 
	mouseEnabled="true" 
	mouseChildren="false" 
	clickThrough="true" 
	useHandCursor="true"
	clothingLayers="{AvatarEditors.clothingLayers}" 
	location="furniture" 
	filters="{Room.playerFilters}" 
	defaultSpeed="12"
	flip="true"
	angle="90"
	displayObjectClass="uk.co.dubit.graphics.render2D.SWFActionPlayer"
	nameBubbleClass="com.dubitplatform.game.CartoonNameBubble" 
	loaderClass="">
	
	<Actions>
		<Stand name="idle" />
		<Walk name="walk" />
	</Actions>

	<Triggers>		
		<onClick>
			<If expression="({Event.handler} == {Room.player})">
				<Then><OpenMenu menu="playerMenu" target="{Event.handler}"/></Then>
				<Else><OpenMenu menu="otherPlayerMenu" target="{Event.handler}"/></Else>
			</If>
		</onClick>
	</Triggers>
</PlayerDefinition>