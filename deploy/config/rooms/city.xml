<?xml version="1.0" encoding="UTF-8"?>
<ChatRoom id="city" xmlns:xi="http://www.w3.org/2001/XInclude">
	
	<Attribute key="startX" value="400" type="number" />
	<Attribute key="startY" value="500" type="number" />	

	<ActorMouseMovementProxy id="playerMovementProxy"/>
	<TargetedCollisionProxy id="targetedCollisionProxy" target="{Room.steve}"/>	
		
	<Collision width="887" height="637" id="walkableArea" solid="true">
		<Asset assetID="hit" x="0" y="0" />
	</Collision>
	
	<Filters>
		<DepthFilter id="depthFilter" scaleBack="0" scaleFront="0.9" />
		<DepthFilter id="playerDepthFilter" scaleBack="-0.7" scaleFront="0.2" />
	</Filters>
	
	<Scene id="scene" target="{Room.player}" viewportWidth="760" viewportHeight="418" width="887" height="600">
		<DisplayObject2D id="background" assetID="background" mouseEnabled="false" />
		<DisplayObject2D id="click" assetID="click" mouseEnabled="true" clickThrough="true" alpha="0"/>
		<ZSortingDisplayObject id="furniture">
			<DisplayObject2D id="buildings" assetID="buildings" x="0" y="505" originX="0" originY="505" mouseEnabled="false"/>
			<DisplayObject2D id="lamppost1" assetID="lamppost1" x="0" y="504" originX="0" originY="504" mouseEnabled="false"/>
			<DisplayObject2D id="lamppost2" assetID="lamppost2" x="0" y="526" originX="0" originY="526" mouseEnabled="false"/>
			<DisplayObject2D id="signpost1" assetID="signpost1" x="0" y="522" originX="0" originY="522" mouseEnabled="false"/>
			<DisplayObject2D id="signpost2" assetID="signpost2" x="0" y="511" originX="0" originY="511" mouseEnabled="false"/>
			<Character id="player" filter="{Room.playerDepthFilter}" speed="0" defaultSpeed="5.5" x="{Room.startX}" y="{Room.startY}" originX="112" originY="269" collidable="true" mouseEnabled="true" clickThrough="true" displayObjectClass="uk.co.dubit.graphics.render2D.ActionPlayer">
				<Actions id="actions" defaultAction="stand">
					<Stand id="stand" path="images/avatar/stand.swf"/>
					<Walk id="walk" path="images/avatar/walk.swf"/>
				</Actions>
			</Character>
		</ZSortingDisplayObject>
		<ZSortingDisplayObject id="playerMessages" />
	</Scene>
	
	<Assets>
		<Asset id="hit" url="[base.url]images/city/hit.png"/>
		<Asset id="click" url="[base.url]images/city/click.png"/>
		<Asset id="background" url="[base.url]images/city/background.png"/>
		<Asset id="buildings" url="[base.url]images/city/buildings.png"/>
		<Asset id="lamppost1" url="[base.url]images/city/lamppost1.png"/>
		<Asset id="lamppost2" url="[base.url]images/city/lamppost2.png"/>
		<Asset id="signpost1" url="[base.url]images/city/signpost1.png"/>
		<Asset id="signpost2" url="[base.url]images/city/signpost2.png"/>
		<Asset id="player" url="[base.url]images/avatar/player.png" />
	</Assets>
	
	<Sounds target="{Room.player}" >
	</Sounds>
	
	<Trigger event="OnClick" gameObject="{Room.click}">	
		<MoveTo gameObject="{Room.player}" x="{Room.player.x}" y="{Room.player.y}" targetX="{Event.x}" targetY="{Event.y}"/>
	</Trigger>

</ChatRoom>